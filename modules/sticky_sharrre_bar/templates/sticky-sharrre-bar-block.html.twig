{#
/**
 * @file
 * Default theme implementation to Sticky Sharrre Bar block.
 *
 * Available variables:
 * - providers: An array of providers.
 * - url: URL to the page or node.
 * - title: Title of the page or node.
 *
 * @ingroup themeable
#}

<div class="sticky_sharrre_bar stickable">
  {{ title_prefix }}
  {% if title %}
    <h2 class="title">{{ title }}</h2>
  {% endif %}
  {{ title_suffix }}
  <ul class="share_list">
    {% for provider in providers %}
      <li>
        <div class="share_on {{ provider }}" id="{{ provider }}" data-title="{{ title }}" data-url="{{ url }}"></div>
      </li>
    {% endfor %}
  </ul>
</div>
